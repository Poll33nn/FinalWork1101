<Page x:Class="FragrantWorld.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FragrantWorld.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Ароматный мир" Background="#FFB6C1">

    <StackPanel VerticalAlignment="Center">
        <StackPanel Margin="10">
            <Label Content="Логин" HorizontalAlignment="Center"/>
            <TextBox x:Name="LoginTextBox" Width="200" Text="admin"/>
            <Label Content="Пароль" HorizontalAlignment="Center"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Password="admin"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="EnterButton" Content="Войти" Width="100" Margin="10" Click="EnterButton_Click"/>
            <Button x:Name="EnterAsGuestButton" Content="Войти как гость" Width="100" Margin="10" Click="EnterAsGuestButton_Click"/>
        </StackPanel>
    </StackPanel>
</Page>
